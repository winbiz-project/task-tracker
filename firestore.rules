
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    match /tasks/{taskId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    match /taskHistories/{historyId} {
      allow read: if get(/databases/$(database)/documents/tasks/$(resource.data.taskId)).data.userId == request.auth.uid;
      allow create: if get(/databases/$(database)/documents/tasks/$(request.resource.data.taskId)).data.userId == request.auth.uid || request.auth.uid != null;
    }
  }
}
